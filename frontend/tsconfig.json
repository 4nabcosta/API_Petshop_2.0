{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* ðŸ”¥ ADIÃ‡Ã•ES IMPORTANTES PARA RESOLVER SEU ERRO */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],

    /* ConfiguraÃ§Ãµes que vocÃª jÃ¡ tinha */
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  }
}
